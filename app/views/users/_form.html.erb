<%= form_with(model: @user, local: true, url: yield(:post_path)) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name, class: 'label' %>
  <%= f.text_field :name, class: 'input', placeholder: 'example user' %>

  <%= f.label :email, class: 'label'  %>
  <%= f.email_field :email, class: 'input', placeholder: 'e.g example@example.com' %>

  <%= f.label :password, class: 'label'  %>
  <%= f.password_field :password, class: 'input' %>

  <%= f.label :password_confirmation, class: 'label'  %>
  <%= f.password_field :password_confirmation, class: 'input' %>

  <%= f.submit 'Sign Up', class: "button is-info" %>
<% end %>
