<%= month_calendar(attribute: :start_at, end_attribute: :end_at, events: @tasks) do |date, tasks| %>
  <%= date.day %>

  <% if tasks.present? %>
  <div id="modal-tasks-description" class="container">
    <a @click="isCardModalActive = true">
      <%= tasks.count %>件予定があります
    </a>
    <b-modal :active.sync="isCardModalActive" :width="640" scroll="keep">
      <div class="card">
        <div class="card-content">
          <div class="content">
            <% tasks.each_with_index do |task, index| %>
              <p>
              Title: <%= task.title %>
              </p>
              <p>
                Description:
                <%= task.description %>
              </p>
              <small>
                <%= task.start_at %>
                <%= task.finish_at %>
              </small>
              <% unless index == tasks.size-1 %>
                <hr>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </b-modal>

    </div>
  <% end %>
<% end %>


<%= javascript_pack_tag 'modal-tasks-description' %>
