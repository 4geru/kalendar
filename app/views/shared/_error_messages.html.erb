<% if @user.errors.any? %>
  <article class="message is-danger">
    <div class="message-header">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <div class="message-body">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </article>
<% end %>
