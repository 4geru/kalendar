<% if object.errors.present? %>
  <article class="message is-danger">
    <div class="message-header">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <div class="message-body">
      <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </article>
<% end %>
